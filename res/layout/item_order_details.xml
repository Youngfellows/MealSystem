<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/item_check_details_name_tv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="红烧肉" />

    <TextView
        android:id="@+id/item_check_details_price_tv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_check_details_name_tv"
        android:text="10.0" />

    <Button
        android:id="@+id/item_check_details_sub_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_check_details_price_tv"
        android:text="-1" />

    <TextView
        android:id="@+id/item_check_details_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_check_details_sub_btn"
        android:text="1" />

    <Button
        android:id="@+id/item_check_details_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_check_details_num_tv"
        android:text="+1" />

    <Button
        android:id="@+id/item_check_details_del_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="删除" />

</RelativeLayout>